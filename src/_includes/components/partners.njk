<section>
  <h1 class="mb-4">Unsere Kooperationspartner</h1>
  <div class="pt-3 gy-md-0 gy-3 row partners justify-content-center">
    {% for partner in partners %}
      {# Set Partner Image #}
      {% if partner.Image.formats.thumbnail %}
        {% set image = partner.Image.formats.thumbnail.url %}
      {% elseif partner.Image.url %}
        {% set image = partner.Image.url %}
      {% endif %}
      {# --- #}
      <div class="col-md-3 text-center position-relative">
        <div class="partner-image-wrap">
          <img src="{{ image }}" alt="" class="partner-image" loading="lazy">
        </div>
        <div class="pt-2"><strong>{{ partner.Name }}</strong></div>
        <div class="pt-1">
          <i><a class="stretched-link"
                href="{{ partner.Link }}">{{ partner.Link | replace("https://", "") }}</a></i>
        </div>
      </div>
    {% endfor %}
  </div>
</section>